{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Create Family Schema",
  "type": "object",

  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "password1": {
      "type": "string",
      "pattern": "^(?=.*[A-Z].*[A-Z])(?=.*[!@#$&*])(?=.*[0-9].*[0-9])(?=.*[a-z].*[a-z].*[a-z]).{12,}$"
    },
    "password2": {
      "type": "string",
      "pattern": "^(?=.*[A-Z].*[A-Z])(?=.*[!@#$&*])(?=.*[0-9].*[0-9])(?=.*[a-z].*[a-z].*[a-z]).{12,}$"
    },
    "fname": {
      "type": "string",
      "pattern": "^(?=.{1,40}$)[a-zA-Z]+(?:[-'\\s][a-zA-Z]+)*$"
    },
    "lname": {
      "type": "string",
      "pattern": "^(?=.{1,40}$)[a-zA-Z]+(?:[-'\\s][a-zA-Z]+)*$"
    },
    "phone": {
      "type": "string",
      "pattern": "^(\\([0-9]{3}\\) |[0-9]{3}-)[0-9]{3}-[0-9]{4}$",
      "maxLength": 10
    },
    "chapter": {
      "type": "string",
      "enum": ["seattle-eastside"]
    },
    "street1": {
      "type": "string"
    },
    "street2": {
      "type": "string"
    },
    "city": {
      "type": "string",
      "enum": [
        "Woodinville",
        "Redmond",
        "Bothell",
        "Kirkland"
      ]
    },
    "state": {
      "type": "string",
      "enum": [ "WA" ]
    },
    "zip": {
      "type": "string",
      "pattern": "^\\d{5}$"
    },
    "delivery_notes": {
      "type": "string",
      "maxLength": 500
    },
    "alias": {
      "type": "string",
      "maxLength": 20,
      "pattern": "^[a-zA-Z0-9_-]*$"
    },
    "members": {
      "type": "string",
      "maxLength": 500
    },
    "member_count": {
      "type": "integer"
    },
    "kids_who_can_cook_count": {
      "type": "integer"
    },
    "allergies_restrictions": {
      "type": "string",
      "maxLength": 500
    },
    "income": {
      "type": "string",
      "enum": [ "0-1500", "1500-2500", "2500-4000", "4000-8000" ]
    }
  },

  "required": [
    "email",
    "password1",
    "password2",
    "fname",
    "lname",
    "phone",
    "chapter",
    "street1",
    "city",
    "state",
    "zip",
    "members",
    "member_count",
    "kids_who_can_cook_count",
    "income"
  ]
}