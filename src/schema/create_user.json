{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Create User Schema",
  "type": "object",

  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "password1": {
      "type": "string",
      "pattern": "^(?=.*[A-Z].*[A-Z])(?=.*[!@#$&*])(?=.*[0-9].*[0-9])(?=.*[a-z].*[a-z].*[a-z]).{12,}$"
    },
    "password2": {
      "type": "string",
      "pattern": "^(?=.*[A-Z].*[A-Z])(?=.*[!@#$&*])(?=.*[0-9].*[0-9])(?=.*[a-z].*[a-z].*[a-z]).{12,}$"
    }
  },

  "required": [
    "email",
    "password1",
    "password2"
  ]
}