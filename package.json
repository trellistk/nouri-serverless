{
  "name": "nouri-serverless",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test:helpers": "tape 'src/tests/helpers/*.js'",
    "test:local": "tape 'src/tests/local/*.js' | tap-diff",
    "test:e2e": "tape 'src/tests/e2e/*.js' | tap-diff",
    "deploy:dev": "sls package --stage dev && sls deploy --package .serverless --stage dev --force",
    "start:local": "IS_OFFLINE=true sls offline start"
  },
  "standard": {
    "ignore": [
      "package-lock.json",
      "node_modules"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nourimeals/nouri-serverless.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npx standard --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nourimeals/nouri-serverless/issues"
  },
  "homepage": "https://github.com/nourimeals/nouri-serverless#readme",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "argon2": "^0.26.2",
    "aws-sdk": "^2.761.0",
    "bcryptjs": "^2.4.3",
    "bufferutil": "^4.0.1",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "serverless": "^2.3.0",
    "sib-api-v3-sdk": "^8.0.2",
    "utf-8-validate": "^5.0.2"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "node-fetch": "^2.6.1",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^6.8.0",
    "standard": "^14.3.4",
    "tap-diff": "^0.1.1",
    "tape": "^5.0.1"
  }
}
